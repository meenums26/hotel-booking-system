<div id="loginContainer">
    <div class="loginForm">
        <div class="formHead">
            <div class="title">
                <h1><i class='fas fa-hotel' style='font-size:43px;'></i>Travelex</h1>
                <sub>DISCOVER LUXURY HOTELS</sub>
            </div>
            <h6>LOGIN</h6>
        </div>
        <form action='/login' method='POST'>
            {{#if loggInErr}}
            <p class="error">{{loggInErr}}</p>
            {{/if}}
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control login-input" name="username">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control login-input" name="password">
            </div>
              <a href="/">Create an account ?</a>
            <button type="submit" class="btn login-btn btn-lg">Login</button>
        </form>
    </div>
</div>