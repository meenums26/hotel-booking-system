<div id="loginContainer">
        <div class="loginForm">
                <div class="formHead">
                <div class="title"><h1><i class='fas fa-hotel' style='font-size:43px;'></i>Travelex</h1>
                <sub>DISCOVER LUXURY HOTELS</sub></div>
                <h6>CREATE ACCOUNT</h6>
                </div>   
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control login-input" name="name" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control login-input" name="email" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control login-input" name="password" placeholder="Password">
                </div>
               <a href="/login">Already have an account ?</a>
                <button type="submit" class="btn btn-primary float-right">Signup</button>
            </form>
        </div>
    </div>
</div>